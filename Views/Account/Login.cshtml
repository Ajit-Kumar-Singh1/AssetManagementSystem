@model AssetManagementSystem.Models.ViewModel.LoginSignUpViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_Login.cshtml";
}

<div class="container">
    <div class="row mt-lg-5">
        <div class="col-4 offset-4 border border-primary rounded pl-5 pr-5 pb-5 pt-5">
            <div class="text-center">
                <h1 class="text-info">Login Form</h1>
            </div>
            <h5 class="text-danger text-center">@TempData["errormessage"]</h5>
            <form method="post" asp-controller="Account" asp-action="Login">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Enter Registered Email Id" value="admin@ams.com" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input type="text" asp-for="Password" placeholder="Enter Password" value="admin" class="form-control" autocomplete="off" />
                    <i id="open" class="fa fa-eye float-right" style="margin-top:-27px;margin-right: 6px;cursor:pointer"></i>
                    <i id="closed" class="fa fa-eye-slash float-right" style="margin-top:-27px;margin-right:6px;cursor:pointer; display:none"></i>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="checkbox" asp-for="IsRemember" />
                    <label asp-for="IsRemember"></label>
                </div>
                <div class="text-lg-left">
                    <button id="login" type="submit" name="login" formmethod="post" class="text-light btn btn-primary font-weight-bold btn-lg mb-1 float-left">Login</button>
                </div>
                <div class="text-lg-right">
                    <a class="text-light btn btn-primary font-weight-bold  btn-lg mb-1 float-Right" asp-action="SignUp" asp-controller="Account">Sign Up</a>
                </div>
                <div class="row">
                    <div class="form-group ml-0">
                        <div class="text-lg-left">
                            <a class="text-primary" asp-action="ForgotPassword">Forgot Password?</a>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="text-lg-center">
                            &nbsp;
                        </div>
                    </div>
                    <div class="form-group mr-0">
                        <div class="text-lg-right">
                            <a class="text-primary" asp-action="ForgotPassword">Forgot Password?</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#open").click(function () {
            $("#open").hide();
            $("#closed").show();
            $("#Password").attr("type", "text");
        });
        $("#closed").click(function () {
            $("#closed").hide();
            $("#open").show();
            $("#Password").attr("type", "password");
        });
    })
</script>

